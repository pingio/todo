<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Background -->
	<Color x:Key="BackgroundLightThemeColour">#eee</Color>
	<SolidColorBrush x:Key="BackgroundLightThemeColourBrush" Color="{StaticResource BackgroundLightThemeColour}" />

	<Color x:Key="BackgroundDarkThemeColour">#212121</Color>
	<SolidColorBrush x:Key="BackgroundDarkThemeColourBrush" Color="{StaticResource BackgroundDarkThemeColour}" />
	<!-- End Background -->

	<!-- Font -->
	<Color x:Key="FontLightColour">#eee</Color>
	<SolidColorBrush x:Key="FontLightColourBrush" Color="{StaticResource FontLightColour}" />

	<Color x:Key="FontDarkColour">#212121</Color>
	<SolidColorBrush x:Key="FontDarkColourBrush" Color="{StaticResource FontDarkColour}" />
	<!-- End Font -->


</ResourceDictionary>